  "version": "0.2.0",
  "configurations": [

    {
      "name": "Launch Package (init)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": ["init", "-C", "/tmp/test-wksp", "-v", "max"]
    },
    {
      "name": "Launch Package (release)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": ["release", "-C", "/tmp/test-wksp", "-v", "max"]
    },
    {
      "name": "Test Current File",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "remotePath": "",
      "port": 2345,
      "host": "127.0.0.1",
      "program": "${file}",
      "env": {},
      "args": [],
      "showLog": true
    },
  ]
}
